<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#534E4E"
    tools:context=".Vistas.Pantalla_Inicio">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animacion_usuario"
                android:layout_width="match_parent"
                android:layout_height="266dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/usuario2"></com.airbnb.lottie.LottieAnimationView>

            <EditText
                android:id="@+id/text_correo"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#FDFDFD"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/text_contrasenia"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/iniciarSesion_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="#CC3B0D"
                android:text="@string/iniciarSesion_btn"
                android:textSize="20sp" />

            <Button
                android:id="@+id/registrarse_btn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:backgroundTint="#CC3B0D"
                android:text="@string/registrarse_btn"
                android:textSize="20sp" />

        </LinearLayout>


    </ScrollView>
</RelativeLayout>